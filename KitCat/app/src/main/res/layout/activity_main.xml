<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFCCFF"
    tools:context="com.example.yuli.kitcat.MainActivity">
    <CheckedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50sp"
        android:layout_marginStart="50sp"
        android:layout_marginTop="26sp"
        android:id="@+id/checkedTextView" />

    <Button
        android:text="HAPPY"
        android:onClick="sendMessage"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_width="170sp"
        android:layout_height="45sp"
        android:id="@+id/buttonHappy"
        android:layout_below="@+id/checkedTextView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="SAD"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_width="170sp"
        android:layout_height="45sp"
        android:layout_below="@+id/buttonHappy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/buttonSad" />

    <Button
        android:text="Bored"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_width="170sp"
        android:layout_height="45sp"
        android:layout_below="@+id/buttonSad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/buttonBored" />

    <Button
        android:text="HALLOWEENY"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_width="170sp"
        android:layout_height="45sp"
        android:layout_below="@+id/buttonBored"
        android:layout_alignLeft="@+id/buttonBored"
        android:layout_alignStart="@+id/buttonBored"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/buttonHalloweeny" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thick"
        android:text="HELLO, HOW ARE YOU FEELING TODAY?"
        android:textSize="43sp"
        android:textColor="@android:color/white"
        android:id="@+id/textView"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
